{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "ES2022",
      "DOM"
    ],
    "module": "ES2022",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2022",
    "experimentalDecorators": true
  },
  "exclude": [],
  "include": [
    "src/**/*.ts",
    "*.config.js",
    "wasm/**/*.d.ts"
  ],
  "typescript.tsdk": "./node_modules/typescript/lib"
}